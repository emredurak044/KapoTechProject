@model KapoTechProject.Models.Service
@{
    ViewBag.Title = "ServicesUpdated";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service Add</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=> x.ServiceID)
                <div class="form-group">
                    <label>Service Name</label>
                    <input type="text" class="form-control" placeholder="Service Name" name="ServiceName" value="@Model.ServiceName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Service URL</label>
                    <input type="text" class="form-control" placeholder="Project Image" name="ImageUrl" value="@Model.ImageUrl">
                </div>

                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="Status" value="@Model.ImageUrl">
                        Status
                        <i class="input-helper"></i>
                    </label>
                </div>
                <input type="submit" class="btn btn-primary mr-2" value="Submit" />
                <a href="/Admin/Services/ServicesList/" class="btn btn-light"> Cancel</a>
            </form>
        </div>
    </div>
</div>
