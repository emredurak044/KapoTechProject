@model List<KapoTechProject.Models.Service>

@{
    ViewBag.Title = "ServicesList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
    var counter = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service Listesi</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            counter++;
                            <tr>
                                <td>@counter</td>
                                <td>@item.ServiceName</td>
                                <td>@item.Status</td>
                                <td>
                                    <a href="/Admin/Services/ServicesDeleted/@item.ServiceID" class="btn btn-outline-danger">
                                        Sil
                                    </a>
                                    <a href="/Admin/Services/ServicesUpdated/@item.ServiceID" class="btn btn-outline-success">
                                        Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
