<div class="col-md-6 grid-margin stretch-card">
    <div class="card tale-bg">
        <div class="card-people mt-auto">
            <img src="~/AdminLayoutContent/images/dashboard/people.svg" alt="people">
            <div class="weather-info">
                <div class="d-flex">
                    <div>
                        <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>@ViewBag.Degree<sup> C</sup></h2>
                    </div>
                    <div class="ml-2">
                        <h4 class="location font-weight-normal">@ViewBag.City</h4>
                        <h6 class="font-weight-normal">@ViewBag.Countries</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
